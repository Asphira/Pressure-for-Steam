"resource/layout/gamespage_details_nonsteam.layout" {
	controls {
		nonsteamdetails {
			controlname="CGamesPage_Details_NonSteam"
			style="nonsteamdetails"
		}
		
		headerlabel {
			controlname="Label"
			style="gamedetails-headerlabel"
			labeltext="#Steam_NonSteam"
		}
		
		bodycontent {
			controlname="RichText"
			style="bodycontent"
		}
	}

	colors {
		RichText.InsetX "0"
		RichText.InsetY "3"
		GameDetailsNonSteam.ExtraVerticalSpacing "44"
	}

	styles {
		nonsteamdetails { 
			bgcolor=black65
			minimum-height=300
		}

		bodycontent {
			textcolor="white"
			selectedtextcolor="white"
			font-size=14
			render_bg {}
		}

		"RichText url" {
			font-size=14
		}
	}

	layout {
		region { 
			name=body 
			margin=20 
			width=max height=max 
		}
		
		place { 
			region=body 
			control=headerlabel 
			width=max 
		}
		
		place { 
			region=body
			y=35 
			width=max
			control=bodycontent
		}		
	}
}