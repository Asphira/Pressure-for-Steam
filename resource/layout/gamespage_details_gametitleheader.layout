"resource/layout/gamespage_details_gametitleheader.layout" {
	controls {
		gametitlelabel { 
			controlname="Label" 
			style="headertextlarge" 
			labeltext="" 
		}
		
		iconimage { 
			controlname="ImagePanel" 
			style="gameicon" 
		}
	}

	colors {
		GameDetailsTitleHeader.HorizontalSpacing=10
	}

	styles {
		CDetailsGameTitleHeaderPanel {}

		headertextlarge {
			font-size=48
			textcolor=white
			font-family=headerfont
			bgcolor=none
		}
	}

	layout {
		region { 
			name="header" 
			y=0 
			x=0 
			width=max 
			height=max 
		}

		place { 
			control=gametitlelabel
			region=header
			dir=right
			align=left-center
			margin-left=0
			margin-right=0
		}
		
		place {
			control="iconimage"
			width=0
			height=0
			y=0
			x=0
		}
	}
}
