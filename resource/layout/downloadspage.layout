"resource/layout/downloadspage.layout"
{
	controls
	{
		// the container
		"DownloadsPage"
		{
			"ControlName"		"CDownloadsPage"
			Style=DownloadsPageStyle
		}
		
		"downloadsummarypanel"
		{
			"ControlName"	"DownloadSummaryPanel"
		}
	
		"panel_list"
		{
			"ControlName"	"SectionedListPanel"
			Style=ListPanelStyle
		}
				
	}
	
	styles
	{
		SectionedListPanelCollapser
		{
			inset = "0 -3 0 -2"
			bgcolor=none
			
			render_bg {
				// fill

				1 = "gradient ( x0 , y0 + 1, x1+2 , y1, grey, lightGreyEnd )" // bg fill lightGreyEnd
				2 = "fill ( x0, y1, x1+2 , y1+1, darkGreyEnd )"
				3 = "fill ( x0, y0 , x1+2 , y0 + 1, greyHighlight )" //greyHighlight
			}
		}

		SectionHeaderStyle
		{
			
			font-style="regular"
			
		render {
				//1 = "fill ( x0, y0 , x1 , y0 + 1, greyHighlight )" //greyHighlight
			}
				
			render_bg {
				// fill

				1 = "gradient ( x0 , y0 + 1, x1 , y1, grey, lightGreyEnd )" // bg fill lightGreyEnd
				2 = "fill ( x0, y1, x1 , y1+1, darkGreyEnd )"
				3 = "fill ( x0, y0 , x1 , y0 + 1, greyHighlight )" //greyHighlight
			}   
		}
		
		SectionHeaderStyleLabel
		{
			inset = "0 1 0 0"
			textcolor="trueWhite"
			font-style="regular"
		}

		DownloadsPageStyle //
		{
			bgcolor=darkestgrey
			render
			{
			
			2 = "fill ( x0, y0, x1, y0+13, black65 )"
			}
	
						
		}


		ListPanelStyle
		{
			inset = "0 0 0 0"
			bgcolor=darkestgrey
			font-family=basefont
			font-size=14
			font-weight=400
			textcolor="none"
			selectedtextcolor="TextSelected"
			selectedbgcolor="Focus"
			shadowtextcolor="TextDisabled"	// the color of disabled line items		
			render
			{

			}
			render_bg 
			{	
				// background gradient
				
				1="fill( x0, y0 , x1, y1, darkestgrey )" 
			}
		}	
	}

	layout
	{
		region { name=main x=0 y=0 margin=0 }
		place { control="downloadsummarypanel" height=145 }
		place { control="downloadsummarypanel,panel_list" dir=down region=main width=max height=max spacing=0 margin-right=-16 }
	}
}
